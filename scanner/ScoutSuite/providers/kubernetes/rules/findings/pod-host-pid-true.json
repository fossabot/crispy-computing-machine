    "references": [
        "https://kubernetes.io/docs/concepts/policy/pod-security-policy/"
    ],
    "dashboard_name": "Pods",
    "path": "pod.v1.resources.id.data.spec",
    "display_path": "pod.v1.id",
    "conditions": [
        "and",
        [
            "pod.v1.resources.id.data.spec",
            "withKey",
            "host_pid"
        ],
        [
            "pod.v1.resources.id.data.spec.host_pid",
            "true",
            ""
        ]
    ],
    "id_suffix": "host_pid"
}